{% extends "index.html.twig" %}

{% block name %}
    <div class="namediv">
        <div class="name">
            <div><h1>Nicky de Vendt</h1></div>
            <div class="namealignment">
                <p>Web developer</p>
                <img src="/img/devel.png" alt="coding...!" id="shrink">
            </div>
        </div>
    </div>
    {{ dump(user)}}
{% endblock %}

{% block main %}
    <div class="contact">
        <h2>Get in "contact" or take a look at my "Resume"</h2>
        <div class="overheaddiv">
          <div class="buttonstyling">
              <a href="/resume"><button class="button"type="button">Resume</button></a>
              <a href="/contact"><button class="button"type="button">Contact!</button></a>
          </div>
        </div>
    </div>
{% endblock %}

{% block text %}
    <div class="text">
        <h2>zet hier wat text neer</h2>
        <p>Met hier nog een beetje meer tekst. en hier nog veel meer tekst gewoon om een beeld te geven hoe het zou staan als hier ook maar wat nuttigs neergezet zou worden.</p>
    </div>
{% endblock %}

{% block promotion %}
    <div class="promotion">
        <h2>Affiliated Companies</h2>
    </div>
    <div class="carousel">
        {% for company in companies %}
            <img class="mySlides" src="/img/{{ company.id }}.jpg" alt="{{ company.name }}">
        {% endfor %}
    </div>
{% endblock %}

{% block recentprojects %}
    <div><h2>Most recent projects</h2></div>
    <div class="projectgrouping">
        {% for project in projects %}
        <div class="project" id="{{ project.id }}">
            <a href="https://{{ project.companywebsite }}" target="_blank"><img src="/img/{{ project.id }}.jpg" alt="{{ project.name }}"></a>
            <p>Project: {{ project.name }} from {{ project.companyname }} </p>
        </div>
        {% endfor %}
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
        <script type="text/javascript" src="scripts.js"></script>
{% endblock %}

